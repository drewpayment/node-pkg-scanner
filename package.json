{
  "name": "node-pkg-scanner",
  "version": "1.0.0",
  "description": "GitHub Action and CLI tool to detect compromised packages (from the Shai Hulud supply chain attack)",
  "main": "dist/index.js",
  "bin": {
    "node-pkg-scanner": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc && ncc build dist/index.js -o dist --source-map",
    "build:action": "npm run clean && tsc && ncc build dist/index.js -o dist && npm run clean:extras",
    "start": "node dist/index.js",
    "cli": "bun src/cli.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "clean:extras": "find dist -name '*.js' ! -name 'index.js' ! -name '*.index.js' -delete"
  },
  "keywords": [
    "security",
    "supply-chain",
    "npm",
    "github-action",
    "vulnerability"
  ],
  "author": "Drew Payment",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@octokit/rest": "^22.0.0",
    "@vercel/ncc": "^0.38.4",
    "commander": "^14.0.1",
    "glob": "^11.0.3",
    "node-fetch": "^3.3.2",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "eslint": "^9.36.0",
    "jest": "^30.1.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18"
  }
}